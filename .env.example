# Firebase Configuration
# Copy this file to .env and fill in your actual Firebase project credentials

REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Optional: Environment
REACT_APP_ENVIRONMENT=development

# Optional: Enable Firebase Emulators for local development
REACT_APP_USE_FIREBASE_EMULATORS=false

# Optional: Analytics and Monitoring
REACT_APP_ENABLE_ANALYTICS=true

# Optional: PWA Configuration
REACT_APP_PWA_NAME=Vigilantes del Aedes
REACT_APP_PWA_SHORT_NAME=Vigilantes Aedes
REACT_APP_PWA_DESCRIPTION=La red ciudadana que protege a Posadas

# Optional: Map Configuration
REACT_APP_DEFAULT_LAT=-27.3671
REACT_APP_DEFAULT_LNG=-55.8961
REACT_APP_DEFAULT_ZOOM=13

# Optional: Features Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_BACKGROUND_SYNC=true
